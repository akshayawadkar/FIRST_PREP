package com.codingsimplidfied;

public class Test{
	
	public static void main(String[] args) {
		
		
		int[] arr = {0, 1, 2, 3, 4};
		
		int n = arr.length;
		
		System.out.println(arr[0 % n]);
		System.out.println(arr[1 % n]);
		System.out.println(arr[2 % n]);
		System.out.println(arr[3 % n]);
		System.out.println(arr[4 % n]);
		System.out.println(arr[5 % n]);
		System.out.println(arr[6 % n]);
		System.out.println(arr[7 % n]);
		
		System.out.println("----------");
		System.out.println(arr[-1 % n]);
		System.out.println(arr[-2 % n]);
		System.out.println(arr[-3 % n]);
		System.out.println(arr[-4 % n]);
		System.out.println(arr[-5 % n]);
		System.out.println(arr[-6 % n]);
		System.out.println(arr[-7 % n]);
		
		
		
		
	}
}